<Window x:Class="Realivation_Companion.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Realivation_Companion.Views"
        xmlns:viewmodels="clr-namespace:Realivation_Companion.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:PairingViewModel}">
            <local:PairingView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:TransferViewModel}">
            <local:TransferView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Go to Pairing View" Command="{Binding ShowPairingViewCommand}" Margin="5"/>
            <Button Content="Go to Transfer View" Command="{Binding ShowTransferViewCommand}" Margin="5"/>
        </StackPanel>
        
    </Grid>
</Window>
